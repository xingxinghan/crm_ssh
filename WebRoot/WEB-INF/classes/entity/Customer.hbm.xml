<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	
	<class name="entity.Customer" table="t_customer">
		<id name="cid" column="cid">
			<generator class="native"></generator>
		</id>
		<property name="custName" column="custName"></property>
		<!-- <property name="custLevel" column="custLevel"></property> -->
		<property name="custSource" column="custSource"></property>
		<property name="custPhone" column="custPhone"></property>
		<property name="custMobile" column="custMobile"></property>
		<!--  -->
		<set name="linkMan" inverse="true" cascade="delete">
			<key column="clid"></key>
			<one-to-many class="entity.LinkMan"/>
		</set>
		
		<set name="cusVisits" inverse="true" cascade="delete">
			<key column="cvid"></key>
			<one-to-many class="entity.Visit"/>
		</set>
		
		<many-to-one name="dict" class="entity.Dict" column="levelid"></many-to-one>
		
	</class>
</hibernate-mapping>





